<?xml version="1.0" encoding="utf-8"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block ifconfig="pyxl_pixels/fb/enable" class="Pyxl\Pixels\Block\Product"
                   name="fb_product" template="Pyxl_Pixels::fb/product.phtml" after="-"/>
            <block ifconfig="pyxl_pixels/pinterest/enable" class="Pyxl\Pixels\Block\Product"
                   name="pinterest_product" template="Pyxl_Pixels::pinterest/product.phtml" after="-"/>
            <block ifconfig="pyxl_pixels/criteo/enable" class="Pyxl\Pixels\Block\Product"
                   name="criteo_product" template="Pyxl_Pixels::criteo/product.phtml" after="-"/>
        </referenceContainer>
    </body>
</page>
