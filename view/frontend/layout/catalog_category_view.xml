<?xml version="1.0" encoding="utf-8"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block ifconfig="pyxl_pixels/fb/enable" class="Pyxl\Pixels\Block\Category"
                   name="fb_category" template="Pyxl_Pixels::fb/category.phtml" after="-"/>
            <block ifconfig="pyxl_pixels/pinterest/enable" class="Pyxl\Pixels\Block\Category"
                   name="pinterest_category" template="Pyxl_Pixels::pinterest/category.phtml" after="-"/>
            <block ifconfig="pyxl_pixels/criteo/enable" class="Pyxl\Pixels\Block\Category"
                   name="criteo_category" template="Pyxl_Pixels::criteo/category.phtml" after="-" />
        </referenceContainer>
    </body>
</page>
