<?xml version="1.0" encoding="utf-8"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block ifconfig="pyxl_pixels/fb/enable" class="Pyxl\Pixels\Block\Checkout"
                   name="fb_checkout_success" template="Pyxl_Pixels::fb/checkout/success.phtml" after="-"/>
            <block ifconfig="pyxl_pixels/pinterest/enable" class="Pyxl\Pixels\Block\Checkout"
                   name="pinterest_checkout_success" template="Pyxl_Pixels::pinterest/checkout/success.phtml" after="-"/>
            <block ifconfig="pyxl_pixels/criteo/enable" class="Pyxl\Pixels\Block\Checkout"
                   name="criteo_checkout_success" template="Pyxl_Pixels::criteo/checkout/success.phtml" after="-"/>
        </referenceContainer>
    </body>
</page>
